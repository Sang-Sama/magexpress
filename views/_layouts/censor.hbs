<body  >

    
  <div style="background-color: whitesmokes;"  class="container-fluid">
    {{#if category}}
        <nav style="text-align: center;"  class="navbar navbar-expand-lg navbar-light bg-light">
          {{#each category}}
            <a class="navbar-brand" href="/censor/bycat/{{category}}">{{catName}}</a>
          {{/each}}
      <ul class="navbar-nav">
       <form id="frmLogout" action="/account/logout" method="POST"></form>
      {{#if lcIsAuthenticated}}
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
