<div class="container">
  <div class="card">
  <div class="card-header">
    <h4>All Post</h4>
  </div>
  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">Không có dữ liệu.</p>
  </div>
  {{else}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
   
         <th scope="col">Witer</th>
        <th scope="col">Title</th>
        <th scope="col">Category</th>
        <th scope="col">Content</th>
        <th scope="col">Tiny Content</th>
        <th scope="col">Image Link</th>
        <th scope="col">Status</th>
        <th scope="col">Conf</th>
        <th scope="col">Date</th>
        <th scope="col">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.post}}
      <tr>
        <th scope="row" class="text-center">{{PostID}}</th>
        <td>{{UserID}}</td>
        <td>{{Title}}</td>
        <td>{{Category}}</td>
        <td>{{Tinycontent}}</td>
        <td>{{Imagelink}}</td>
        <td>{{Status}}</td>
        <td>{{Conf}}</td>
        <td>{{Date}}</td>
        <td class="text-right">
          <a class="btn btn-primary btn-sm" href="/admin/repair/{{PostID}}" role="button">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
          <a class="btn btn-danger btn-sm" href="/admin/delete/{{PostID}}" role="button">
            <i class="fa fa-trash" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}
  <div class="card-footer text-muted">
    Footer
  </div>
</div>
</div>
<script>
  var x = document.getElementById("category");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }

  </script>
